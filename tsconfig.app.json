{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "lib": ["DOM", "ESNext", "ESNext.Array", "ESNext.AsyncIterable", "WebWorker"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "index.html",
    "types/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
